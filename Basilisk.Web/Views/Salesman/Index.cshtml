@using Basilisk.ViewModel.Salesman;
@using System.Globalization;
@model IndexSalesmanViewModel;
@{
    ViewData["Title"] = "Category Index";
}

<link rel="stylesheet" href="~/css/styleFolder.css" asp-append-version="true" />
<h1>Total data Salesmen : @ViewBag.TotalProduct</h1>
<a type="button" class="btn btn-search" asp-action="Add">Add</a>
<table>
    <thead>
        <tr>
            <th>Action</th>
            <th>Employe Number</th>
            <th>Nama</th>
            <th>Level</th>
            <th>BirthDate</th>
            <th>HireDate</th>
            <th>Address</th>
            <th>City</th>
            <th>Phone</th>
            <th>SuperiorEmployee</th>
            @*<th>Jumlah Region</th>*@
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.grid)
        {
            <tr>
                <td>
                    <a class="btn btn-update" asp-action="Edit" asp-route-id="@item.ID">Edit</a>
                    <a class="btn btn-delete" asp-action="Delete" asp-route-empNumber="@item.ID">Hapus</a>
                    <a class="btn btn-detail"  asp-action="Detail" asp-route-id="@item.ID">Detail</a>
                </td>
                <td>@item.ID</td>
                <td>@item.FirstName @item.LastName</td>
                <td>@item.Level</td>
                <td>@item.BirthDate</td>
                <td>@item.HireDate</td>
                <td>@item.Address</td>
                <td>@item.City</td>
                <td>@item.Phone</td>
                <td>@item.SuperiorEmpName</td>
                @*<td>@item.JumlahRegion</td>*@
            </tr>
        }
    </tbody>
    <tfoot>
        <tr>
            <td></td>
            <td colspan="9">
                @for(var i=1;i<=Model.TotalHalaman; i++)
                {
                    <a class="btn" asp-route-page="@i">@i</a>
                }
            </td>
        </tr>
    </tfoot>
</table>
