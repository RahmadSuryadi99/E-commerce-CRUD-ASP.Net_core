    </div>
    <div>
        <h1>Alamat:</h1>
        <span class="alamat"></span>
    </div>
    <div>
        <h1>Kota: </h1>
        <span class="kota"></span>
    </div>
    <div>
        <h1>Nomor: </h1>
        <span class="nomor"></span>
    </div>
    <div>
        <h1>Email: </h1>
        <span class="email"></span>
    </div>

    <table class="tblProd">
        <thead>
            <tr>
                <th>ID</th>
                <th>ProductName</th>
                <th>Supplier</th>
                <th>Category</th>
                <th>Description</th>
                <th>Price</th>
