@using Basilisk.ViewModel.ProdSupCat;
@using System.Globalization;
@model IEnumerable<GridProdSupCatViewModel>;
<link rel="stylesheet" href="~/css/styleFolder.css" asp-append-version="true" />
<h1>Detail Product</h1>
<table>
    <thead>
        <tr>
            <th>ID</th>
            <th>ProductName</th>
            <th>Supplier</th>
            <th>Category</th>
            <th>Description</th>
            <th>Price</th>
            <th>Stock</th>
            <th>OnOrder</th>
            <th>Discontinue</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in @Model)
        {
            <tr>
                <td>@item.ID</td>
                <td>@item.ProductName</td>
                <td>@item.Supplier</td>
                <td>@item.Category</td>
                <td>@item.Description</td>
                <td>@item.GetFormattedPrice()</td>
                <td>@item.Stock</td>
                <td>@item.OnOrder</td>
                <td>@item.GetFormattedDisc()</td>
            </tr>
        }
    </tbody>
</table>